- name: install wordpress
  hosts: plesk.yhoro.de
  vars:
    user:
        - vhost_user: "BP-999"
          vhost_group: "{{ vhosts_group }}"
          vhost_servername: "wordpress.yhoro.de"
          vhost_alias: "wordpress.yhoro.org"
          vhost_fpm_version: "php7.4-fpm"

  roles:
    - apache_vhost
    - wordpress